{
  "compilerOptions": {
    "target": "ES6",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true

  },
  "include": ["src/**/*", "scripts/**/*", "scripts"],
  "exclude": ["node_modules"]
}